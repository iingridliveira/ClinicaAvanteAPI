datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Especialidade {
  CARDIOLOGIA
  DERMATOLOGIA
  GINECOLOGIA
  ORTOPEDIA
  PEDIATRIA
}

model Medico {
  id            String        @id @default(uuid())
  nome          String
  especialidade Especialidade
  consultas     Consulta[]
}

model Paciente {
  id              String     @id @default(uuid())
  nome            String
  email           String     @unique
  dataNascimento  DateTime   @db.Date
  consultas       Consulta[]
}

model Consulta {
  id          String    @id @default(uuid())
  data        DateTime  @default(now())
  descricao   String?

  medicoId    String
  pacienteId  String

  medico      Medico    @relation(fields: [medicoId], references: [id])
  paciente    Paciente  @relation(fields: [pacienteId], references: [id])

  @@unique([medicoId, data], name: "unique_medico_horario")
  @@index([medicoId, data])
}

